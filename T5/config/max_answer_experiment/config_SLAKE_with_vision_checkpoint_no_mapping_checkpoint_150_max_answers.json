{
    "seed": 88,
    "max_source_length" : 512,
    "max_target_length" : 128,
    "dataset": "SLAKE",
    "datafolder": "/data/ossowski",
    "use_image_info": 1,
    "T5_version": "t5-small",
    "vision_encoder": "ViT-B/32",
    "vision_checkpoint": "models/PubMedCLIP_ViT32.pth",
    "mapping_checkpoint": 0,
    "use_BAN": 0,
    "use_prediction_head": 0,
    "freeze": 0,
    "max_answers": 150,
    "glimpse": 10,
    

    "SLAKE_TASKS": ["KG", "Shape", "Quantity", "Size", "Plane", "Organ", "Position", "Color", "Abnormality", "Modality"],

    "hyperparameters": {
        "epochs": 100,
        "learning_rate": 0.00001,
        "batch_size": 16
    },

    "fewshot_training_tasks": {
        "enabled": 0,
        "limit": 100,
        "train": ["KG", "Shape", "Quantity", "Size", "Plane", "Organ", "Position", "Color", "Abnormality", "Modality"],
        "test": ["KG", "Shape", "Quantity", "Size", "Plane", "Organ", "Position", "Color", "Abnormality", "Modality"]
    }

}